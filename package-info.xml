<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>Dougiefresh:Changelog</id>
	<name>Expanding & Collapsing Changelog Tag</name>
	<type>modification</type>
	<version>2.3</version>

	<install for="2.0 - 2.0.99">
		<readme parsebbc="true">readme.txt</readme>
		<code>add_remove_hooks.php</code>
		<modification type="file">language_english.xml</modification>
		<require-file name="Subs-BBCode-Changelog.php" destination="$sourcedir" />
		<require-file name="changelog.gif" destination="$imagesdir/bbc" />
	</install>
	<uninstall for="2.0 - 2.0.99">
		<code>add_remove_hooks.php</code>
		<modification type="file" reverse="true">language_english.xml</modification>
		<remove-file name="$sourcedir/Subs-BBCode-Changelog.php" />		
		<remove-file name="$imagesdir/bbc/changelog.gif" />
	</uninstall>

	<install for="2.1 Beta 1">
		<readme parsebbc="true">readme.txt</readme>
		<code>add_remove_hooks.php</code>
		<modification type="file">language_english.xml</modification>
		<require-file name="Subs-BBCode-Changelog.php" destination="$sourcedir" />
		<require-file name="changelog.png" destination="$imagesdir/bbc" />
	</install>
	<uninstall for="2.1 Beta 1">
		<code>add_remove_hooks.php</code>
		<modification type="file" reverse="true">language_english.xml</modification>
		<remove-file name="$sourcedir/Subs-BBCode-Changelog.php" />		
		<remove-file name="$imagesdir/bbc/changelog.png" />
	</uninstall>
</package-info>